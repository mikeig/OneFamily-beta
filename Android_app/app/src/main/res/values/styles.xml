<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:textViewStyle">@style/OnefamilyTextViewStyle</item>-->
    </style>

    <style name="OnefamilyStartTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:button">@style/OnefamilyButtonStyle</item>
        <item name="android:windowFullscreen">true</item>

        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorButtonBlue</item>
        <item name="colorPrimaryDark">@color/colorButtonBlue</item>
        <item name="colorPrimary">@color/colorButtonBlue</item>
    </style>

    <style name="OnefamilyTheme" parent="Theme.AppCompat.Light">
        <item name="android:button">@style/OnefamilyButtonWhiteStyle</item>
        <item name="windowActionBar">true</item>
        <item name="windowActionBarOverlay">false</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="colorAccent">@color/colorOtherScreen</item>
        <item name="colorPrimaryDark">@color/colorOtherScreen</item>
        <item name="colorPrimary">@color/colorOtherScreen</item>
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/primary_text_dark</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="OnefamilyMainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:button">@style/OnefamilyButtonWhiteStyle</item>
        <item name="windowActionBar">true</item>
        <item name="windowActionBarOverlay">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="colorAccent">@color/colorOtherScreen</item>
        <item name="colorPrimaryDark">@color/colorOtherScreen</item>
        <item name="colorPrimary">@color/colorOtherScreen</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="OnefamilyButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/cabin</item>
    </style>

    <style name="OnefamilyButtonWhiteStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="OnefamilyRoundButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="OnefamilyRoundInputStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/input_shape</item>

        <item name="android:textColor">@color/colorOtherScreen</item>
    </style>

    <style name="OnefamilyTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="OnefamilyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="OnefamilyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
