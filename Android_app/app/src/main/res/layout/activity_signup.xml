<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SignupActivity">

    <ScrollView
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="18dp"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/signupLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="12dp"
                android:padding="20dp"
                android:text="Create an Account"
                android:textAllCaps="false"
                android:textColor="@color/colorOtherScreen"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="18dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textColor="@color/colorOtherScreen"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="230dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="18dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorOtherScreen"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="230dp" />

            <EditText
                android:id="@+id/postal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="18dp"
                android:ems="10"
                android:hint="Postal Code"
                android:inputType="textPostalAddress"
                android:textColor="@color/colorOtherScreen"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="230dp" />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="18dp"
                android:ems="10"
                android:hint="Home Address"
                android:inputType="textPostalAddress"
                android:textColor="@color/colorOtherScreen"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="230dp" />


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="18dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/colorOtherScreen"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="230dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="Are you a native or immigrant?"
                tools:layout_editor_absoluteX="149dp"
                tools:layout_editor_absoluteY="598dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="18dp">

                <Button
                    android:id="@+id/button_native"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:background="@color/colorButtonBlue"
                    android:text="Native"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5" />

                <Button
                    android:id="@+id/button_immigrant"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:background="@color/colorButtonBlue"
                    android:text="Immigrant"
                    android:textAllCaps="false"
                    android:textStyle="bold" />
            </TableRow>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="How long have you lived in this neighborhood?" />

            <EditText
                android:id="@+id/userYears"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="18dp"
                android:ems="10"
                android:hint="Years"
                android:inputType="number"
                android:textColor="@color/colorOtherScreen"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="230dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="Do you have an Refer Code?" />

            <EditText
                android:id="@+id/userRef"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="18dp"
                android:ems="10"
                android:hint="Code"
                android:inputType="text"
                android:textColor="@color/colorOtherScreen"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="230dp" />

            <Button
                android:id="@+id/continue_button"
                style="@style/OnefamilyRoundButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                android:text="Continue"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>