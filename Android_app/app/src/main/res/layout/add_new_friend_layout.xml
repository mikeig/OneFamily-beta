<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:orientation="vertical"
    android:background="@drawable/recpop"
    android:padding="8dp"
    android:layout_gravity="center">

    <RelativeLayout
        android:id="@+id/newFriendR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/hero" />

        <TextView
            android:id="@+id/textView55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="48dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="Are you adding Jojo as your friend?"
            android:textColor="@color/colorOtherScreen"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/newFriendaddName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="216dp"
            android:gravity="center"
            android:text="Jojo"
            android:textColor="@color/colorOtherScreen"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/newFriendTagAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newFriendaddName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="#CatLover #Foodie #PS4"
            android:textColor="@color/colorOtherScreen"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="36dp"
        android:orientation="horizontal"
        android:padding="12dp">

        <Button
            android:id="@+id/acceptFButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/yes" />

        <Button
            android:id="@+id/declineFButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/no" />

        <Button
            android:id="@+id/detectAgainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:padding="6dp"
            android:text="Detect Again"
            android:textAllCaps="true"
            android:textColor="@color/colorOtherScreen"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>